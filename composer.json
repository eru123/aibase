{
  "name": "eru123/aibase",
  "type": "project",
  "license": "proprietary",
  "autoload": {
    "psr-4": {
      "Api\\": "api/"
    }
  },
  "authors": [
    {
      "name": "eru123",
      "email": "jericho@skiddph.com"
    }
  ],
  "scripts": {
    "post-create-project-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
      "@php scripts/ensure-pnpm.php",
      "pnpm install",
      "@php scripts/post-create.php"
    ],
    "post-install-cmd": [
      "@php scripts/ensure-pnpm.php",
      "pnpm install"
    ]
  },
  "require": {
    "vlucas/phpdotenv": "^5.6",
    "phpmailer/phpmailer": "^7.0",
    "zordius/lightncandy": "^1.2"
  },
  "require-dev": {
    "robmorgan/phinx": "^0.13"
  }
}
